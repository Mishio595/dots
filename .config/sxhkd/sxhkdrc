#
# bspwm hotkeys
#

# quit bspwm
super + shift + Escape
    bspc quit

# switch/move window to workspace
super + {_,shift + }{1-9}
    bspc {desktop -f,node -d} focused:^{1-9}

# close window
super + q
    bspc node -c

super + f
	bspc node focused -t ~fullscreen

# toggle window state (floating,fullscreen)
super + space
    toggle-floating

# toggle layout (tiled, monocle)
super + t
    bspc desktop -l next

## rotate desktop
super + Tab
    bspc node @focused:/ -R 90

#focus desktop
super + {Right,Left}
    bspc desktop -f {next,prev}

# focus window
super +{ ,shift + }{j,k}
    bspc node {-f,-s} {prev,next}.local

# Preselect splitting area
super + alt + {h,j,k,l}
    bspc node -p \~{west,south,north,east}
ctrl + alt + {Left,Right,Up,Down}
    bspc node -p \~{west,east,north,south}

# Balance the current desktop
super + b
	bspc node @focused:/ -B -E

#
# wm independent hotkeys
#

super + Return
	alacritty -e tmux

super +{ shift + , }w
    {vivaldi-stable,luakit}

super + {alt,shift} + f
	{urxvtc -e ranger,caja}

super + r
	alacritty -e rtv >/dev/null

super +{ shift + , }d
	{rofi -show combi, ~/.dmenu_recent}

super + n
    alacritty --name ncmpcpp -e ncmpcpp

ctrl + alt + l
    i3lock-wrapper

XF86Audio{Raise,Lower}Volume
	pulseaudio-ctl {up,down} 2
#    amixer set Master 2%{+,-}

XF86AudioMute
	pulseaudio-ctl mute
#    amixer -q set Master toggle

XF86Audio{Prev,Next,Play,Stop}
    mpc {prev,next,toggle,stop}

{_,shift + }XF86MonBrightness{Down,Up}
	xbacklight {-10,min,+10,max}

# make sxhkd reload its configuration files:
super + shift + c
    pkill -USR1 -x sxhkd
